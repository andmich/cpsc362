@model PasswordManagerProject.Models.PasswordViewModel
@{
    ViewBag.Title = "Edit";
}


<div class="contentpanel">
    <div class="panel-header">
        <h2 align="Center">Editing Password</h2>
        <br />
        <h3 align="Center">@Model.PasswordInfo.Password</h3>
    </div>
    @using (Html.BeginForm("EditAdditionalInfo", "Password", FormMethod.Post, new { name = "EditAdditionalInfo", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.Hidden("passId", Model.PasswordInfo.PasswordId)
        <div class="panel-body">        
            <div class="form-group">
                <label class="col-sm-3 control-label">Username</label>
                <div class="col-sm-6">
                    @Html.TextBox("username", Model.PasswordInfo.Username, new { @class = "form-control" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Security Answer</label>
                <div class="col-sm-6">
                    @Html.TextBox("securityAnswer", Model.PasswordInfo.SecurityAnswer, new { @class = "form-control" })
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Label</label>
                <div class="col-sm-6">
                    @Html.TextBox("label", Model.PasswordInfo.LabelType, new { @class = "form-control" })
                </div>
            </div>        
        </div>
        <div class="panel-footer text-center">
            <button class="btn btn-success" type="submit">Save</button>
            <a class="btn btn-warning" href="@Url.Action("Index", "Profile", new { userId = Model.PasswordInfo.UserId })">Cancel</a>
        </div>

    }
</div>
